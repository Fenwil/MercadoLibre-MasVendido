{
  "manifest_version": 2,
  "name": "MercadoLibre Más Vendido",
  "author": "Leonardo Galante",
  "short_name": "Más Vendido",
  "version": "0.0.7",
  "description": "Encontrá de manera rápida el artículo más vendido que estés buscando en MercadoLibre con esta extensión",
  "icons": {
    "16": "assets/mercado-libre_16.png",
    "48": "assets/mercado-libre_48.png",
    "128": "assets/mercado-libre_128.png"
  },
  "browser_action": {
    "default_title": "Busca el más vendido",
    "default_icon": "assets/mercado-libre_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.mercadolibre.com.ar/*",
        "*://*.mercadolibre.com.bo/*",
        "*://*.mercadolivre.com.br/*",
        "*://*.mercadolibre.cl/*",
        "*://*.mercadolibre.com.co/*",
        "*://*.mercadolibre.com.co.cr/*",
        "*://*.mercadolibre.com.do/*",
        "*://*.mercadolibre.com.ec/*",
        "*://*.mercadolibre.com.gt/*",
        "*://*.mercadolibre.com.hn/*",
        "*://*.mercadolibre.com.mx/*",
        "*://*.mercadolibre.com.mx/*",
        "*://*.mercadolibre.com.ni/*",
        "*://*.mercadolibre.com.ni/*",
        "*://*.mercadolibre.com.pa/*",
        "*://*.mercadolibre.com.py/*",
        "*://*.mercadolibre.com.pe/*",
        "*://*.mercadolivre.pt/*",
        "*://*.mercadolibre.com.sv/*",
        "*://*.mercadolibre.com.uy/*",
        "*://*.mercadolibre.com.ve/*"
      ],
      "js": [
        "src/content_script.js"
      ]
    }
  ]
}
